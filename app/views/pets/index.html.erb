<h1>Listing Pets</h1>

<table class = "table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

    <tr>
      <th>Business Name</th>
      <th>Pet Name</th>
      <th>Pet Age</th>
      <th>Pet Gender</th>
    </tr>
  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= Business.find(pet.business_id).name %></td>
        <td><%= pet.pet_name %></td>
        <td><%= pet.age %></td>
        <td><%= pet.gender %></td>
        <td><%= link_to 'Show', pet %></td>
        <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
        <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

